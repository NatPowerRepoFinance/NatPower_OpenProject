<%=
  widget_wrapper do |container|
    if has_no_subitems?
      container.with_row do
        render(Primer::Beta::Text.new(color: :subtle)) { t(".no_results") }
      end
    else
      displayed_subitems.each do |child|
        container.with_row do
          flex_layout do |row|
            row.with_column do
              render(Primer::Beta::Text.new(color: :subtle)) do
                concat render Primer::Beta::Octicon.new(
                  icon: helpers.workspace_icon(child),
                  mr: 1,
                  color: :subtle,
                  "aria-label": child.workspace_label
                )
                concat child.workspace_label
              end
            end

            row.with_column(ml: 2) do
              render(Primer::Beta::Link.new(href: project_path(child))) { child.name }
            end

            row.with_column(ml: 2) do
              render(Projects::StatusBadgeComponent.new(project: child))
            end
          end
        end
      end

      if has_more_subitems?
        container.with_row do
          render(Primer::Beta::Link.new(href: view_all_subitems_path)) { t(".view_all_subitems") }
        end
      end
    end
  end
%>
