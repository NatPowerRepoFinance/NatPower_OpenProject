<%=
  flex_layout(
    align_items: :flex_start,
    justify_content: :space_between,
    classes: "op-project-attribute-container",
    data: {
      test_selector: "project-attribute-#{@attribute}"
    }
  ) do |attribute_container|
    attribute_container.with_row(mb: 1) do
      render OpenProject::Common::AttributeLabelComponent.new(
        attribute: @attribute,
        model: @project
      ) do
        render(Primer::Beta::Text.new(font_weight: :bold)) { attribute_label }
      end
    end

    attribute_container.with_row(w: :full) do
      render(Primer::Beta::Text.new) { attribute_value }
    end
  end
%>

